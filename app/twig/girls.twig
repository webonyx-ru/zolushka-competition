{% extends 'layouts/app.twig' %}

{% block content %}
    {% include 'layouts/header.twig' %}

    <div class="fw-pt-50 fw-pb-60 fw-bg-cover fw-bg-no-repeat fw-bg-center fw-bg-color-light-dark">
        <div class="container">
            <div class="fw-mb-30">
                <a href="#" class="fw-color-pink fw-text-underline-hover fw-fz-16 fw-flex fw-flex-inline fw-flex-middle"><i class="icon icon-list-small fw-mr-5"></i>Смотреть рейтинг</a>
            </div>
            <div class="fw-text-center fw-mt-20">
                <p class="fw-mt-0 fw-mb-0 fw-fz-30 fw-font-futura-demic fw-text-uppercase">УЧАСТНИЦЫ</p>
                <p class="fw-mb-0 fw-mt-10 fw-fz-24 fw-font-futura-demic">Голосование начнется 26 июня</p>
